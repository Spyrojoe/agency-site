		<script>
		$(document).ready(function(){
			$(".gallery-item").children().not(".opaque-bg").css("opacity", "0");
			$(".opaque-bg").height(270).width(270);
			$(".gallery-item").hover(
				function(){
					fadeGalleryItemsIn($(this).children().not(".opaque-bg"), $(this).children(".opaque-bg"));},
				function(){
					fadeGalleryItemsOut($(this).children().not(".opaque-bg"), $(this).children(".opaque-bg"));}
			);
			function fadeGalleryItemsIn(galleryItem, opaqueBg){
				galleryItem.animate({
					opacity: "1"
				}, {duration: 200, queue: false});
				opaqueBg.animate({
					opacity: ".8"
				}, {duration: 200, queue: false});
			}
			function fadeGalleryItemsOut(galleryItem, opaqueBg){
				galleryItem.animate({
					opacity: "0"
				}, {duration: 200, queue: false});
				opaqueBg.animate({
					opacity: "0"
				}, {duration: 200, queue: false});
			}
		});
		</script>
